# Databricks IoT Connector Environment Variables
# Copy this file to .env and fill in your values

# Databricks Authentication
DATABRICKS_CLIENT_ID=your-service-principal-client-id
DATABRICKS_CLIENT_SECRET=your-service-principal-client-secret

# OPC-UA Authentication (if using username/password)
OPCUA_USERNAME=
OPCUA_PASSWORD=

# MQTT Authentication
MQTT_USERNAME=
MQTT_PASSWORD=

# Modbus Authentication (rarely used)
MODBUS_USERNAME=
MODBUS_PASSWORD=

# Logging
LOG_LEVEL=INFO

# Proxy Settings (if behind corporate proxy)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Optional: Databricks workspace (can also be set in connector.yaml)
DATABRICKS_WORKSPACE_HOST=https://your-workspace.cloud.databricks.com
